<?xml version="1.0"?>

    <page xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" 
           xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

           <body>

            <referenceContainer name="product.info.main">

                <block class="Magento\Catalog\Block\Product\View\Description" name="product.info.base_uom"

                  template="Magento_Catalog::product/view/attribute.phtml" after="product.info.sku">

                    <arguments>

                        <argument name="at_call" xsi:type="string">getBaseUom</argument>

                        <argument name="at_code" xsi:type="string">base_uom</argument>

                        <argument name="css_class" xsi:type="string">base_uom</argument>

                        <argument name="at_label" xsi:type="string">default</argument>

                        <argument name="add_attribute" xsi:type="string">itemprop="base_uom"</argument>

                    </arguments>

                </block>
             
            </referenceContainer>

        </body>

</page>